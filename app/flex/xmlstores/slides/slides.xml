<?xml version="1.0" encoding="UTF-8" ?>

<slides>
	<!-- Show navigation to (true / false) -->
	<navigation>false</navigation>
	
	<!-- Path to navigation-icons, x & y positions -->
	<navPrevPath>assets/images/slides/navprev.png</navPrevPath>
	<navNextPath>assets/images/slides/navnext.png</navNextPath>
	<navPrevXpos>30</navPrevXpos>
	<navPrevYpos>180</navPrevYpos>
	<navNextXpos>930</navNextXpos>
	<navNextYpos>180</navNextYpos>
	
	<!-- Color and Height of Preloader Bar -->
	<preloaderColor>0x0099FF</preloaderColor>
	<preloaderHeight>6</preloaderHeight>
	
	<!-- Show labeles (true / false) -->
	<labels>true</labels>
	
	<!-- Label background color, alpha, width, topPadding, bottomPadding, leftPadding -->
	<labelBoxColor>0xffffff</labelBoxColor>
	<labelBoxAlpha>0.8</labelBoxAlpha>
	<labelBoxWidth>960</labelBoxWidth>
	<labelBoxTopPadding>10</labelBoxTopPadding>
	<labelBoxBottomPadding>10</labelBoxBottomPadding>
	<labelBoxLeftPadding>10</labelBoxLeftPadding>
	
	<!-- Set the delaytime (ms) -->
	<delayTime>3000</delayTime>
	
	<!-- Set tweentime (sec) -->
	<tweenTime>0.6</tweenTime>
	
	<!-- Set transition-type (fade, blur, rightWipe, leftWipe, topWipe, bottomWipe -->
	<transitionType>bottomWipe</transitionType>
	
	<!-- This is only used if transitionType = blur -->
	<blurAmount>10</blurAmount>
	
	<!-- Set transition easing type -->
	<!-- Back.easeOut, 		Back.easeIn, 		Back.easeInOut -->
	<!-- Bounce.easeOut, 	Bounce.easeIn, 		Bounce.easeInOut -->
	<!-- Circ.easeOut, 		Circ.easeIn, 		Circ.easeInOut -->
	<!-- Cubic.easeOut, 	Cubic.easeIn, 		Cubic.easeInOut -->
	<!-- Elastic.easeOut,	Elastic.easeIn, 	Elastic.easeInOut -->
	<!-- Expo.easeOut, 		Expo.easeIn, 		Expo.easeInOut -->
	<!-- Quad.easeOut, 		Quad.easeIn, 		Quad.easeInOut -->
	<!-- Quart.easeOut, 	Quart.easeIn, 		Quart.easeInOut -->  
	<!-- Quint.easeOut, 	Quint.easeIn, 		Quint.easeInOut -->
	<!-- Sine.easeOut, 		Sine.easeIn, 		Sine.easeInOut -->
	<!-- Strong.easeOut, 	Strong.easeIn, 		Strong.easeInOut -->
	<!-- Linear.easeNone -->
	
	<transitionEasing>Expo.easeInOut</transitionEasing>
	
	<!-- Path to stylesheet -->
	<stylesheet>assets/css/styles.css</stylesheet>
	
	<!-- Path to font-swf -->
	<fontswf>assets/images/slides/rockwell.swf</fontswf>
	
