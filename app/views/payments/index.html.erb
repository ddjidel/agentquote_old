<h1>Listing payments</h1>

<table>
  <tr>
    <th>Quote</th>
    <th>Payment plan</th>
    <th>Down payment type</th>
    <th>Bill type</th>
    <th>Min down</th>
    <th>Installment</th>
    <th>Total charge</th>
    <th>Agency fee</th>
    <th>Policy fee</th>
    <th>Misc fee</th>
    <th>Misc fee reason</th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%=h payment.quote_id %></td>
    <td><%=h payment.payment_plan %></td>
    <td><%=h payment.down_payment_type %></td>
    <td><%=h payment.bill_type %></td>
    <td><%=h payment.min_down %></td>
    <td><%=h payment.installment %></td>
    <td><%=h payment.total_charge %></td>
    <td><%=h payment.agency_fee %></td>
    <td><%=h payment.policy_fee %></td>
    <td><%=h payment.misc_fee %></td>
    <td><%=h payment.misc_fee_reason %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New payment', new_payment_path %>